<div class="container">
 <div class="text">
   <h1>Hello <%= @user.first_name  %> &#x1F44B;  welcome to share&play application</h1>
   <h2>Your games List</h2>
  </div>

  <div class="container m-8">
   <div class="profile-card">
     <div class="row">
      <% @user.games.each do |game| %>
        <div class="col-md-3">
              <div class="card h-100 text-center mb-10 " id='card-profile'  style="background-image:url('<%= cl_image_path game.image.key %>');background-repeat: no-repeat; background-size: cover;">
                <img class="card-img d-none" src="<%= cl_image_path game.image.key %>" alt="<%= game.name %>">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><bold><%= game.name %></h5></bold>
                  <p class="card-text"><bold>Your Game description:</bold><%= game.description %></p>
                  <button class="btn-profile mt-auto  draw-border"><%= link_to 'More Details', game_path(game), class: "profile-btn" %></button>
                </div>
              </div>
            </div>
      <% end %>
    </div>
   </div>


    <div class="text">
      <h2>Your Requests</h2>
      <% @bookings.each do |booking| %>
        <div class="notification mt-3">
          <div class="notification-content">
          <h5> Booking was made by <%= booking.user.first_name %>, for the game : <%= booking.game.name %></h5>
          </div>
          <div class="notification-actions">
            <%= link_to "Accept", games_path, method: :put, class: "accept-btn" %>
            <%= link_to "Reject", games_path, method: :put, class: "reject-btn" %>
          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>
